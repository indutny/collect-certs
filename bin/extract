#!/usr/bin/env node
var collector = require('../');

var db = require('levelup')(process.argv[2]);

var stream = db.createReadStream({
  gt: 'cert/',
  lt: 'cert/z'
});

process.stdout.write('[');
process.on('exit', function() {
  process.stdout.write('\nnull]\n');
});

var pending = 0;

function runPending() {
  if (pending === 0)
    return;
  pending--;

  parallel();
}

stream.on('readable', runPending);

function parallel() {
  var pair = stream.read();
  if (!pair) {
    pending++;
    return;
  }

  // Slice off the `cert/`
  var hash = pair.key.slice(5);

  var ips = [];
  db.createReadStream({
    gt: 'map/' + hash + '/',
    lt: 'map/' + hash + '/z',
    keys: true
  }).on('data', function(ip) {
    // Slice off `map/hash/addr/`
    ips.push(ip.slice(4 + hash.length + 6));
  }).once('end', function() {
    var info = collector.extract(pair.value, ips);

    if (info)
      process.stdout.write('\n' + JSON.stringify(info) + ',');

    parallel();
  });
}

for (var i = 0; i < 1000; i++)
  parallel();
